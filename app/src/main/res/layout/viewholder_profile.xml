<?xml version="1.0" encoding="utf-8"?>



    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="200dp"
        android:background="@drawable/light_purple_bckg">



        <ImageView
            android:id="@+id/imageItemArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/folder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleItemArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои пометки"
            android:paddingEnd="16dp"
            android:textColor="@color/dark_purple"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageItemArchive"
            app:layout_constraintStart_toEndOf="@+id/imageItemArchive"
            app:layout_constraintTop_toTopOf="@+id/imageItemArchive" />
    </androidx.constraintlayout.widget.ConstraintLayout>

